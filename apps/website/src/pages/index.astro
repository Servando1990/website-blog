---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import TrustedBy from '../components/TrustedBy.astro';
import SocialProof from '../components/SocialProof';
import Solutions from '../components/Solutions-Option3.astro';
import Industries from '../components/Industries.astro';
import TestimonialSquares from '../components/TestimonialSquares';
import Partners from '../components/Partners-Option3.astro';
import ProfileSection from '../components/ProfileSection.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="controlthrive - Strategic AI Solutions"
  description="AI partners that understand, ship, and stay."
  ogUrl="https://www.controlthrive.com/"
  ogImage="https://www.controlthrive.com/api/og/home.png"
>
  <Header />
  
  <main class="home-visual visual-2-home">
    <Hero />
    <SocialProof client:load />
    <TrustedBy />
    <Solutions />
    <Industries />
    <TestimonialSquares client:load />
    <ProfileSection />
    <Partners />
  </main>
  
  <Footer />
</Layout>

<style is:global>
  .visual-2-home {
    background-color: hsl(var(--background));
  }

  .visual-2-home h1,
  .visual-2-home h2,
  .visual-2-home h3 {
    font-family: var(--font-serif), ui-serif, Georgia, serif !important;
    letter-spacing: -0.01em;
  }

  .visual-2-home section {
    position: relative;
  }

  .visual-2-home section::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    width: min(86rem, 94vw);
    transform: translateX(-50%);
    border-top: 1px solid rgba(161, 161, 170, 0.22);
    pointer-events: none;
  }

  .dark .visual-2-home section::before {
    border-top-color: rgba(113, 113, 122, 0.35);
  }

  .visual-2-home #home .mx-auto {
    background: transparent !important;
    border: 0 !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .visual-2-home #social-proof .rounded-2xl,
  .visual-2-home #trusted-by .rounded-2xl {
    background: transparent !important;
    border: 0 !important;
    border-radius: 0 !important;
    box-shadow: none !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .visual-2-home #social-proof .rounded-xl,
  .visual-2-home #solutions .group,
  .visual-2-home #industries .group,
  .visual-2-home #trusted-by .group,
  .visual-2-home #testimonial-squares .grid > div,
  .visual-2-home #profile-section .relative {
    background: transparent !important;
    border: 0 !important;
    border-bottom: 1px solid rgba(161, 161, 170, 0.35) !important;
    border-radius: 0 !important;
    box-shadow: none !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    padding-top: 1rem !important;
    padding-bottom: 1rem !important;
  }

  .dark .visual-2-home #social-proof .rounded-xl,
  .dark .visual-2-home #solutions .group,
  .dark .visual-2-home #industries .group,
  .dark .visual-2-home #trusted-by .group,
  .dark .visual-2-home #testimonial-squares .grid > div,
  .dark .visual-2-home #profile-section .relative {
    border-bottom-color: rgba(82, 82, 91, 0.75) !important;
  }

  .visual-2-home #industries .group:hover,
  .visual-2-home #solutions .group:hover,
  .visual-2-home #testimonial-squares .grid > div:hover,
  .visual-2-home #trusted-by .group:hover {
    transform: none !important;
    background: transparent !important;
  }

  .visual-2-home #home .pointer-events-none {
    display: none !important;
  }

  .visual-2-home #home .inline-flex.rounded-full,
  .visual-2-home #home .h-11 {
    border-radius: 0 !important;
  }
</style>
