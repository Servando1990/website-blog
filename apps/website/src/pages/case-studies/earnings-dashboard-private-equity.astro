---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import InteractiveCaseStudyDiagram from '../../components/InteractiveCaseStudyDiagram';
import { getCaseStudyBySlug } from '../../lib/caseStudies';

const slug = 'earnings-dashboard-private-equity';
const caseStudy = getCaseStudyBySlug(slug);

if (!caseStudy) {
  throw new Error(`Missing case study metadata for ${slug}`);
}

const diagramSteps = [
  {
    id: 'capture',
    title: 'Call data capture',
    summary: 'Earnings call recordings and transcripts are collected for each portfolio company.',
    detail:
      'The intake layer standardizes incoming call artifacts so they can be processed with consistent quality and metadata.',
    tag: 'Data Inputs',
    tone: 'source',
    metric: 'Portfolio-wide ingestion',
  },
  {
    id: 'enrich',
    title: 'Signal enrichment',
    summary: 'Transcripts are segmented and enriched with speaker context and temporal markers.',
    detail:
      'Context enrichment maps statements to speakers and time windows, preparing data for sentiment and topic-level interpretation.',
    tag: 'Processing',
    tone: 'processing',
    metric: 'Speaker-aware segmentation',
  },
  {
    id: 'inference',
    title: 'Risk and sentiment inference',
    summary: 'Models score sentiment trajectories and identify anomalous language patterns.',
    detail:
      'Inference highlights positive and negative shifts that may indicate performance risk, execution friction, or upside opportunities.',
    tag: 'Model Layer',
    tone: 'model',
    metric: 'Trend-sensitive scoring',
  },
  {
    id: 'prioritize',
    title: 'Portfolio prioritization',
    summary: 'Signals are ranked by urgency and materiality for investment teams.',
    detail:
      'A decision layer converts model output into ranked action queues so teams can triage high-impact calls first.',
    tag: 'Decision Output',
    tone: 'decision',
    metric: 'Urgency-ranked insights',
  },
  {
    id: 'delivery',
    title: 'Analyst workflow delivery',
    summary: 'Findings are surfaced in dashboards and alerts for daily monitoring.',
    detail:
      'The final interface ties evidence to each alert so analysts can validate context quickly and act with confidence.',
    tag: 'Outcome',
    tone: 'outcome',
    metric: 'Faster analyst review',
  },
];
---

<Layout
  title={`${caseStudy.title} - Case Study - controlthrive`}
  description={caseStudy.summary}
  ogType="article"
  ogImage={`/api/og/case-studies/${slug}.png`}
>
  <Header />
  
  <main class="min-h-screen bg-background editorial-headings">
    <!-- Hero Section -->
    <section class="pt-24 pb-16">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="inline-block bg-accent/10 text-accent-foreground px-3 py-1 rounded-full text-sm font-medium mb-6">
            Private Equity
          </div>
          <h1 class="text-4xl md:text-5xl font-medium text-black dark:text-white mb-6">
            Earnings Call Dashboard for Private Equity Firm
          </h1>
          <div class="flex flex-wrap gap-2 mb-8">
            <span class="bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 px-3 py-1 rounded-full text-sm">
              NLP
            </span>
            <span class="bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 px-3 py-1 rounded-full text-sm">
              Dashboard
            </span>
            <span class="bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 px-3 py-1 rounded-full text-sm">
              Financial Analytics
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <section class="pb-24">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto space-y-16">
          
          <!-- Challenge -->
          <div>
            <h2 class="text-3xl font-medium text-black dark:text-white mb-6">
              Challenge
            </h2>
            <div class="prose prose-lg dark:prose-invert">
              <p class="text-zinc-600 dark:text-zinc-300 leading-relaxed">
                [Content to be added]
              </p>
            </div>
          </div>

          <!-- Design -->
          <div>
            <h2 class="text-3xl font-medium text-black dark:text-white mb-6">
              Design
            </h2>
            <div class="prose prose-lg dark:prose-invert">
              <p class="text-zinc-600 dark:text-zinc-300 leading-relaxed">
                [Content to be added]
              </p>
            </div>
          </div>

          <!-- Implementation Highlights -->
          <div>
            <h2 class="text-3xl font-medium text-black dark:text-white mb-6">
              Implementation Highlights
            </h2>
            <ul class="list-disc pl-6 space-y-3 text-zinc-600 dark:text-zinc-300 leading-relaxed">
              <li>Combined transcript and audio features to capture both semantic and vocal sentiment signals.</li>
              <li>Ranked insights by risk materiality to focus analyst attention on high-impact portfolio updates.</li>
              <li>Linked alerts to timestamped evidence so teams can audit and validate model output quickly.</li>
            </ul>
            <InteractiveCaseStudyDiagram
              client:visible
              title="Private Equity Monitoring Pipeline"
              subtitle="Track how call intelligence is transformed into ranked analyst actions."
              steps={diagramSteps}
            />
          </div>

          <!-- Result -->
          <div>
            <h2 class="text-3xl font-medium text-black dark:text-white mb-6">
              Result
            </h2>
            <div class="prose prose-lg dark:prose-invert">
              <p class="text-zinc-600 dark:text-zinc-300 leading-relaxed">
                [Content to be added]
              </p>
            </div>
          </div>

          <!-- Takeaway -->
          <div>
            <h2 class="text-3xl font-medium text-black dark:text-white mb-6">
              Takeaway
            </h2>
            <div class="prose prose-lg dark:prose-invert">
              <p class="text-zinc-600 dark:text-zinc-300 leading-relaxed">
                [Content to be added]
              </p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-zinc-50 dark:bg-zinc-900/50">
      <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="text-3xl font-medium text-black dark:text-white mb-4">
            Ready to Transform Your Business?
          </h2>
          <p class="text-lg text-zinc-600 dark:text-zinc-300 mb-8">
            Let's discuss how AI solutions can drive similar results for your organization.
          </p>
          <a 
            href="https://cal.com/servando-torres/discovery-call" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center bg-primary text-primary-foreground hover:bg-primary/90 transition-colors px-8 py-4 rounded-lg font-medium text-lg"
          >
            Schedule a Discovery Call
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
