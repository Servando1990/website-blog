---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const caseStudies = [
  {
    id: 'price-optimization-saas',
    title: 'Price Optimization for SaaS Product',
    industry: 'SaaS',
    summary: 'Designed an end-to-end dynamic pricing optimization system, that allowed single and multi optimization goals, while respecting business rules and constraints for e-commerces',
    tags: ['Machine Learning', 'Pricing Strategy', 'Revenue Optimization']
  },
  {
    id: 'ai-matching-engine-manufacturing',
    title: 'AI Matching Engine.',
    industry: 'Manufacturing',
    summary: 'Successfully integrated an AI matching engine that fetches data from various sources, addressing 200,000 incomplete entries',
    tags: ['AI/ML', 'Supply Chain', 'Process Optimization']
  },
  {
    id: 'earnings-dashboard-finance-research',
    title: 'Earnings Call Dashboard for Financial Research',
    industry: 'Private Equity',
    summary: 'Created an automated dashboard that processes earnings calls from 500+ portfolio companies, extracting key insights and predicting sentiment with vocal tone AI models.',
    tags: ['NLP', 'Dashboard', 'Financial Analytics']
  }
];
---

<Layout title="Case Studies - controlthrive">
  <Header />
  
  <main class="min-h-screen bg-background">
    <!-- Hero Section -->
    <section class="pt-24 pb-16">
      <div class="container mx-auto px-6">
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-5xl font-bold text-black dark:text-white mb-6">
            How we have helped
          </h1>
          <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
            Explore our successful AI implementations across various industries and see how we've helped businesses transform their operations.
          </p>
        </div>
      </div>
    </section>

    <!-- Case Studies Grid -->
    <section class="pb-24">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-8 max-w-4xl mx-auto">
          {caseStudies.map((study) => (
            <div class="bg-card rounded-lg border border-border p-8 hover:shadow-lg transition-all duration-300">
              <!-- Industry Tag -->
              <div class="inline-block bg-accent/10 text-accent-foreground px-3 py-1 rounded-full text-sm font-medium mb-4">
                {study.industry}
              </div>
              
              <!-- Title -->
              <h2 class="text-2xl font-bold text-black dark:text-white mb-4">
                {study.title}
              </h2>
              
              <!-- Summary -->
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-6">
                {study.summary}
              </p>
              
              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-6">
                {study.tags.map((tag) => (
                  <span class="bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
              
              <!-- CTA Button -->
              <a 
                href={`/case-studies/${study.id}`}
                class="inline-flex items-center justify-center bg-primary text-primary-foreground hover:bg-primary/90 transition-colors px-6 py-3 rounded-lg font-medium"
              >
                Read Full Case Study
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900/50">
      <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-black dark:text-white mb-4">
            Ready to Transform Your Business?
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
            Let's discuss how AI solutions can drive similar results for your organization.
          </p>
          <a 
            href="https://cal.com/servando-torres/discovery-call" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center bg-primary text-primary-foreground hover:bg-primary/90 transition-colors px-8 py-4 rounded-lg font-medium text-lg"
          >
            Schedule a Discovery Call
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>