---
// Company data with logos
const companies = [
  {
    name: 'BBVA',
    domain: 'bbva.com'
  },
  {
    name: 'Orange',
    domain: 'orange.com'
  },
  {
    name: 'Fintonic', 
    domain: 'fintonic.com'
  },
  {
    name: 'PwC',
    domain: 'pwc.com'
  },
  {
    name: 'KPMG',
    domain: 'kpmg.com'
  },
  {
    name: 'Minsait',
    domain: 'minsait.com'
  },
  {
    name: 'Stealth',
    domain: 'startup.com',
    customLogo: 'data:image/jpeg;base64,'
  }
];
---

<section class="pt-32 pb-16 px-6 bg-light-card dark:bg-dark-card">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center">
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-medium mb-8 text-black dark:text-white">
        Companies we have helped
      </h2>
      
      <div class="flex flex-wrap justify-center items-center gap-12 md:gap-16 lg:gap-20">
        {companies.map((company) => (
          <div class="flex flex-col items-center gap-2 opacity-70 hover:opacity-100 transition-all duration-200 group">
            <img 
              src={company.customLogo || `https://www.google.com/s2/favicons?domain=${company.domain}&sz=128`}
              alt={`${company.name} logo`}
              class="w-8 h-8 md:w-10 md:h-10 filter grayscale group-hover:grayscale-0 transition-all duration-200"
              loading="lazy"
            />
            <span class="text-xs text-[#878787] group-hover:text-black dark:group-hover:text-white transition-colors duration-200">
              {company.name}
            </span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>