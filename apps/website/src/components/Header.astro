---
import ThemeToggle from './ThemeToggle';
---

<header class="sticky top-0 z-50 bg-light-bg/80 dark:bg-dark-bg/80 backdrop-blur-sm border-b border-light-border dark:border-dark-border">
  <nav class="container mx-auto px-6 py-4 flex items-center justify-between">
    <div class="flex flex-col">
      <span class="text-xl font-medium text-black dark:text-white">controlthrive</span>
      <span class="text-sm text-gray-600 dark:text-gray-400">by Servando Torres</span>
    </div>
    
    <div class="flex items-center gap-6">
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/" class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors">
          Home
        </a>
        <a href="/case-studies" class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors">
          Case Studies
        </a>
        <a 
          href="https://ai-framework-demo.vercel.app/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors"
        >
          AI Assessment
        </a>
      </div>
      
      <!-- Mobile Navigation -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-button"
          class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white p-2"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <ThemeToggle client:load />
    </div>
  </nav>
  
  <!-- Mobile Menu Dropdown -->
  <div id="mobile-menu" class="hidden md:hidden bg-light-bg dark:bg-dark-bg border-b border-light-border dark:border-dark-border">
    <div class="container mx-auto px-6 py-4 flex flex-col gap-4">
      <a href="/" class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors">
        Home
      </a>
      <a href="/case-studies" class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors">
        Case Studies
      </a>
      <a 
        href="https://ai-framework-demo.vercel.app/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white transition-colors"
      >
        AI Assessment
      </a>
    </div>
  </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
      
      // Close menu when clicking on a link
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('hidden');
        });
      });
    }
  });
</script>