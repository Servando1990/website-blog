---
import { Building2, Briefcase, ShoppingCart, CreditCard, ExternalLink } from 'lucide-react';

const industries = [
  {
    key: 'investment-banking',
    name: 'Investment Banking',
    IconComponent: Building2
  },
  {
    key: 'capital-advisory', 
    name: 'Capital Advisory',
    IconComponent: Briefcase
  },
  {
    key: 'retail',
    name: 'Retail & E-commerce',
    IconComponent: ShoppingCart
  },
  {
    key: 'credit-lending',
    name: 'Credit and Lending',
    IconComponent: CreditCard
  }
];

// Use original industries array for static display
---

<section class="py-20 bg-zinc-50/55 dark:bg-zinc-950/45" id="industries">
  <!-- Header section with container -->
  <div class="container mx-auto max-w-6xl px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-medium mb-6 text-black dark:text-white">
        Specialized AI Solutions for Key Industries
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 max-w-3xl mx-auto">
        Years in the trenches of these industries. We know what matters in your business.
      </p>
    </div>
  </div>

  <!-- Static Industries Container -->
  <div class="container mx-auto max-w-6xl px-6 mb-16">
    <div class="grid grid-cols-1 gap-5 md:grid-cols-2 xl:grid-cols-4">
      {industries.map((industry) => (
        <div class="group rounded-2xl border border-zinc-200 bg-white p-6 text-center shadow-sm transition-all duration-300 hover:-translate-y-1 hover:border-zinc-300 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-950 dark:hover:border-zinc-700">
          <div class="flex justify-center mb-4">
            <div class="rounded-lg bg-zinc-100 p-3 transition-all duration-300 group-hover:bg-zinc-200 dark:bg-zinc-900 dark:group-hover:bg-zinc-800">
              <industry.IconComponent className="h-8 w-8 text-zinc-700 dark:text-zinc-300 transition-transform duration-300 group-hover:scale-110" />
            </div>
          </div>
          
          <h3 class="font-medium text-lg text-black dark:text-white transition-colors duration-300 group-hover:text-zinc-600 dark:group-hover:text-zinc-300">
            {industry.name}
          </h3>
        </div>
      ))}
    </div>
  </div>

  <!-- Footer section with container -->
  <div class="container mx-auto max-w-6xl px-6">
    <div class="text-center">
      <a 
        href="https://cal.com/servando-torres-garcia-qco7rh/30min" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg border border-zinc-300 px-8 py-4 text-black transition-all duration-200 hover:border-zinc-400 hover:bg-white dark:border-zinc-700 dark:text-white dark:hover:border-zinc-600 dark:hover:bg-zinc-900"
      >
        Discuss Your Industry
        <ExternalLink className="h-4 w-4" />
      </a>
    </div>
  </div>
</section>

