---
import { Check } from 'lucide-react';

const solutions = [
  "Seamless synergy between business goals and ML implementations",
  "Rapid Time-to-Market with focus on business use cases", 
  "Simplified technical demands and optimized resource usage",
  "Strategic long-term partnership for ongoing success"
];
---

<section class="py-20 px-6" id="solutions">
  <div class="container mx-auto max-w-5xl">
    <div class="text-center mb-16">
      <!-- Option 3: Refined Medium Typography -->
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-medium mb-4 text-black dark:text-white">
        We are grounded in these fundamentals
      </h2>
    </div>
    
    <div class="space-y-6 mb-12">
      {solutions.map((solution) => (
        <div class="group flex items-start gap-4 rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm transition-all duration-200 hover:-translate-y-0.5 hover:border-zinc-300 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-950 dark:hover:border-zinc-700">
          <div class="flex-shrink-0 mt-1">
            <div class="flex h-7 w-7 items-center justify-center rounded-full bg-zinc-100 transition-colors duration-200 group-hover:bg-zinc-200 dark:bg-zinc-900 dark:group-hover:bg-zinc-800">
              <Check className="h-4 w-4 text-zinc-700 dark:text-zinc-300" />
            </div>
          </div>
          <p class="leading-relaxed text-zinc-700 dark:text-zinc-300">
            {solution}
          </p>
        </div>
      ))}
    </div>
  </div>
</section> 
