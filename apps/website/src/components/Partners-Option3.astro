---
const partners = [
  {
    name: 'Outerbounds',
    domain: 'outerbounds.com',
    description: 'AI Infrastructure'
  },
  {
    name: '5X', 
    domain: '5x.co',
    description: 'Data Engineering Infrastructure'
  },
  {
    name: 'Searchplex',
    domain: 'searchplex.net',
    description: 'Search Specialists'
  }
];
---

<section class="py-20 px-6" id="partners">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <!-- Enhanced prominence for important Partners section -->
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-medium mb-6 text-black dark:text-white">
        Our Partners
      </h2>
      <p class="text-lg md:text-xl text-[#878787] mt-4 md:mt-8 mb-12 max-w-3xl mx-auto leading-relaxed">
        We have partner-up with best-in class Data & ML infrastructure to deploy seamlessly any solution
      </p>
    </div>
    
    <!-- Partners grid with descriptions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {partners.map((partner) => (
        <div class="text-center group">
          <a 
            href={`https://${partner.domain}`}
            target="_blank"
            rel="noopener noreferrer" 
            class="block"
          >
            <h3 class="text-2xl md:text-3xl font-medium text-black dark:text-white group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors mb-3">
              {partner.name}
            </h3>
            <p class="text-sm md:text-base text-[#878787] font-medium tracking-wide">
              {partner.description}
            </p>
          </a>
        </div>
      ))}
    </div>
  </div>
</section> 