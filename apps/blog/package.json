{
  "name": "astro-blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check-links": "cd ../../tools && uv run python check_links.py ../apps/blog",
    "generate-desc": "cd ../../tools && uv run python generate_desc.py ../apps/blog",
    "generate-sitemap": "cd ../../tools && uv run python generate_sitemap.py ../apps/blog",
    "shortlink": "cd ../../tools && uv run python shortlinks.py",
    "content-pipeline": "npm run generate-desc && npm run check-links && npm run generate-sitemap",
    "python-setup": "cd ../../tools && uv sync",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.0.0",
    "@astrojs/rss": "^4.0.0",
    "@website-blog/ui": "*",
    "astro": "^4.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0"
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@eslint/js": "^9.30.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  }
}
